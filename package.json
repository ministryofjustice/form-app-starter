{
  "name": "gov-starter",
  "version": "0.0.0",
  "scripts": {
    "start": "node server.js",
    "start:dev": "yarn build && DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "build": "yarn run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "record-build-info": "node ./bin/record-build-info"
  },
  "engines": {
    "node": ">= 8.4.0",
    "npm": ">=5.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^1.1.0",
    "compression": "^1.7.2",
    "cookie-parser": "~1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "debug": "~3.1.0",
    "dotenv": "^5.0.1",
    "express": "~4.16.3",
    "express-request-id": "^1.4.0",
    "govuk-elements-sass": "^3.1.2",
    "govuk-frontend": "^2.3.0",
    "helmet": "^3.12.0",
    "http-errors": "~1.6.3",
    "knex": "^0.15.2",
    "moment": "^2.22.1",
    "morgan": "^1.9.1",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.1.4",
    "passport": "^0.4.0",
    "pg": "^7.6.1",
    "ramda": "^0.25.0",
    "sass-middleware": "^0.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "sinon": "^4.5.0"
  }
}
